<div class="col mb-4">
  <a href="{{ course.url | relative_url }}">
    <div class="card h-100 hoverable">
      <div class="row no-gutters">
        {% if course.img %}
          <div class="col-md-6">
            {%
              include figure.liquid
              loading="eager"
              path=course.img
              sizes="(min-width: 768px) 156px, 50vw"
              alt="course thumbnail"
              class="card-img"
            %}
          </div>
        {% endif %}
        <div class="{% if course.img %}col-md-6{% else %}col-md-12{% endif %}">
          <div class="card-body">
            <h3 class="card-title">{{ course.title }}</h3>
            <p class="card-text">{{ course.description }}</p>
            <p class="card-text"><small class="text-muted">{{ course.institution }}</small></p>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
